<form action="/Home/Details" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm" style="border-radius: 10px; overflow: hidden; height: 100%; display: flex; flex-direction: column;">
                    <!-- اسم الفيلم في الأعلى -->
                    <div class="card-header text-center">
                        <h5>@Model.Name</h5>
                    </div>

                    <div class="card-body d-flex" style="gap: 20px;">
                        <!-- الصورة على اليسار بحجم 50% -->
                        <div style="width: 50%;">
                            <img src="~/images/@Model.ImgUrl" class="img-fluid" alt="@Model.Name" style="height: 400px; width: 80%; object-fit: cover;">
                        </div>

                        <!-- باقي التفاصيل على اليمين بمحاذاة الصورة -->
                        <div style="width: 50%; display: flex; flex-direction: column; justify-content: space-between;">
                            <div>
                                <p class="card-text"><strong>Price:</strong> @Model.Price</p>
                                <p class="card-text"><strong>Cinema:</strong> @Model.Cinema</p>
                                <p class="card-text"><strong>Start Date:</strong> @Model.StartDate</p>
                                <p class="card-text"><strong>End Date:</strong> @Model.EndDate</p>
                                <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                                <p class="card-text"><strong>Description:</strong> @Model.Description</p>


                            </div>
                            <div >
                                <a href="/Home/Actores"><img src="~/cast/cast1.png" class="img-fluid" style="height: 50px; width: 10%; object-fit: cover;"></a>
                                <a href="/Home/Actores"><img src="~/cast/cast2.png" class="img-fluid" style="height: 50px; width: 10%; object-fit: cover;"></a>
                                <a href="/Home/Actores"><img src="~/cast/cast3.png" class="img-fluid" style="height: 50px; width: 10%; object-fit: cover;"></a>
                            </div>

                            <!-- زرار الحالة والأزرار الأخرى -->
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                @{
                                    DateTime today = DateTime.Today;
                                    if (today >= Model.StartDate && today <= Model.EndDate)
                                    {
                                        <button type="button" class="btn btn-success btn-sm">Availabal</button>
                                    }
                                    else if (today < Model.StartDate)
                                    {
                                        <button type="button" class="btn btn-warning btn-sm">Upcoming</button>
                                    }
                                    else if (today > Model.EndDate)
                                    {
                                        <button type="button" class="btn btn-danger btn-sm">Expired</button>
                                    }
                                }

                                <!-- الأزرار بجانب بعض وبحجم متوسط -->
                                <div class="d-flex">
                                    <a href="#" class="btn btn-primary btn-md mr-2">Book Ticket</a>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
