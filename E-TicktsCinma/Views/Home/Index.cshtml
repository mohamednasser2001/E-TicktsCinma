 @*  @model List<Movie>   *@
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm" style="border-radius: 10px; overflow: hidden; height: 100%; display: flex; flex-direction: column;">
                        <!-- اسم الفيلم في الأعلى -->
                        <div class="card-header text-center">
                            <h5>@item.Name</h5>
                        </div>

                        <div class="card-body d-flex">
                            <!-- الصورة على اليسار بحجم أكبر -->
                            <div class="card-img-left" style="width: 50%; padding-right: 20px;">
                                <img src="~/images/@item.ImgUrl" class="img-fluid" alt="@item.Name" style="height: 400px; width: 130%; object-fit: cover;">
                            </div>

                            <!-- باقي التفاصيل على اليمين -->
                            <div class="card-details" style="flex: 1; display: flex; flex-direction: column; justify-content: space-between;">
                                
                                <p class="card-text"><strong>Price:</strong> @item.Price</p>
                                <p class="card-text"><strong>Cinema:</strong> @item.Cinema</p>
                                 <p class="card-text">Start Date: @item.StartDate</p> 
                                 <p class="card-text">End Date:  @item.EndDate</p> 
                                 <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                            @{
                                DateTime today = DateTime.Today;
                                if (today >= item.StartDate && today <= item.EndDate)
                                {
                                    <button type="button" class="btn btn-success">Avialabale</button>

                                }
                                else if (today < item.StartDate)
                                {
                                    <button type="button" class="btn btn-success disabled">UpComing</button>

                                }
                                else if (today > item.EndDate)
                                {
                                    <button type="button" class="btn btn-danger disabled">Expair</button>

                                }
                            }

                            <a href="/Home/Details?MovieId=@item.Id" class="btn btn-primary mt-auto">More Details</a>
                                <a href="#" class="btn btn-primary mt-auto">Book Ticket</a>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>







